<div class="login_page">
	<div class="row">
		<div class="form_container col-md-6 col-md-offset-3">
			<%= form_for(:session, url: login_path) do |f| %>
				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>

				<%= f.submit "Log in", class: "btn btn-primary" %>
			<% end %>

			<p>New user? <%= link_to "Sign up here", new_profile_path %></p>
		</div>
	</div>
		<%= image_tag("login_banner.png") %>
</div>
