<div class="summoner-request-page" id="summoner-request">
  
  <div class="col-md-5 col-md-offset-3">
  	<div class="table-responsive">
		  <table class="table request-table" cellspacing="0" style="border-spacing: 0;">
		    <thead>
		    	<tr>
		    		<th colspan="3" scope="colgroup" class="header request-header">Friend Request from <%= @friend_stats[:spec_user].capitalize %></th>
		    	</tr>
		    </thead>
		    <tbody>
		      <tr>
	        	<td ><strong>Summoner Name: <%= @friend_stats[:spec_user].capitalize %></strong></td>
            <td ><strong>Most Played Champ: <%= @friend_stats[:top_played].most_played %> </strong></td>
        	  <td class="champ-img" rowspan="3" scope="rowgroup"><%= link_to image_tag(@friend_stats[:top_played].icon), champion_path(@friend_stats[:top_played].id)  %></td>
	        </tr>
	        <tr>
	        	<td ><strong>Summoner Level: <%= @friend_stats[:summoner].summoner_level %></strong></td>
	        	<td ><strong>Highest KDR Champ: <%= @friend_stats[:top_kd].best_kd %> </strong></td>
		      </tr>
	        <tr>
	          <td ><strong>Last Active: <%= @friend_stats[:summoner].revision_date.to_s.slice(0,10) %></strong></td>
	          <td ><strong>Highest WLR Champ: <%= @friend_stats[:top_wl].best_wl %> </strong></td>
	        </tr>
		    </tbody>
		    <tfoot>
		      <tr data-no-turbolink>
            <td><%= link_to "Accept Request", decide_friendships_path(friend_email: params[:friend_email], requester_email: params[:requester_email], request_token: params[:id], response_code: 'accept'), class: "btn btn-success" %></td>
            <td ><%= link_to "Deny Request", decide_friendships_path(friend_email: params[:friend_email], requester_email: params[:requester_email], request_token: params[:id], response_code: 'deny'), class: "btn btn-danger" %></td>
            <td ><%= link_to "Ignore Request", decide_friendships_path(friend_email: params[:friend_email], requester_email: params[:requester_email], request_token: params[:id], response_code: 'ignore'), class: "btn btn-default" %></td>
          </tr>
		    </tfoot>
		  </table>
    </div>
  </div>
</div>

