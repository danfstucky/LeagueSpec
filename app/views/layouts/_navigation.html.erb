<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <%= link_to "League Spec", root_path, id: "logo" %>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <!-- Display user options if logged in. -->
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name.capitalize %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", profile_url(current_user) %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
          <!-- Social Menu options -->
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">LeagueSpec Social <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Invite to LeagueSpec", invite_user_url %></li>
            <li><%= link_to "All Friends", friendships_url(friends_list_code: 'all') %></li>
            <li><%= link_to "Active Friends", friendships_url(friends_list_code: 'active') %></li>
            <li><%= link_to "Pending Requests", friendships_url(friends_list_code: 'pending') %></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    <div class="col-md-3 search-form pull-right">  
      <%= form_tag search_summoner_path, class: "navbar-form", method: :get, id: 'summoner-lookup-form' do %>
        <div class="input-group">
          <%= text_field_tag :summoner, params[:summoner], class: "form-control search-box", placeholder: "Search Summoner ", autofocus: true %>
          <span class="input-group-btn">
            <%= button_tag(type: :submit, class: "btn btn-default") do %>Search
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
          
      
      

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>